{% extends "./base.njk" %}

{% block main %}
    <div class="grid lg:grid-col lg:grid-cols-2 grid-flow-row lg:w-full gap-4 lg:justify-items-center">

        <div>
            {{content | safe}}
            <p>
       Le <time datetime="{{date}}">{{date.toLocaleDateString("fr")}}</time>
            </p>
            <p>Lieu : {{ place }}</p>
        </div>

        <img src="{{poster}}" alt="Affiche du stage '{{title}}'" class="max-w-md">
    </div>
{% endblock %}