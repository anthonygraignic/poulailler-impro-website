<a href="{{spectacle.url}}" class="block max-w-sm bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    {% if spectacle.data.image %}
        <img class="rounded-t-lg" src={{spectacle.data.image}} alt="Affiche du spectacle '{{spectacle.data.title}}'"/>
    {% endif %}
    <div class="p-6">
        <p class="mb-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white line-clamp-2">
            {{spectacle.data.title}}
        </p>
        <p class="mb-2 font-sm text-yellow-500">{{ spectacle.data.date.toLocaleDateString("fr") }} à {{spectacle.data.time}}</p>
        {# <p class="mb-3 font-sm text-gray-700 dark:text-gray-400 line-clamp-3">
            {{spectacle.data.description}}
        </p> #}
        <p class="mb-2 font-sm text-gray-700 dark:text-gray-400 line-clamp-1">{{ spectacle.data.place }}</p>

        {% if spectacle.data.price %}
            <p class="font-sm text-gray-700 dark:text-gray-400">
                {% if spectacle.data.price > 0 %}
                    {{spectacle.data.price}}€
            {% else %}
                Gratuit
            {% endif %}
            </p>
        {% endif %}

    </div>
</a>