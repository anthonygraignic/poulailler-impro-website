                <img src="{{ prochainSpectacle.data.image }}" 
             alt="Affiche du spectacle '{{spectacle.data.title}}'"
             class="hidden lg:block rounded-lg shadow-2xl lg:h-80 w-auto mx-auto object-contain">
            {% endif %}
        </div>
    </section>
{% endif %}